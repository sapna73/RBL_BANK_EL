<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:clickable="true"
    android:paddingLeft="@dimen/_12sdp"
    android:paddingTop="@dimen/_6sdp"
    android:paddingRight="@dimen/_12sdp"
    android:paddingBottom="@dimen/_6sdp">

    <androidx.cardview.widget.CardView
        android:layout_margin="@dimen/_5sdp"
        android:id="@+id/cv_lead"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        app:cardElevation="@dimen/_4sdp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="@dimen/_5sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
              >


                <ImageView
                    android:id="@+id/iv_sync_status"
                    android:layout_width="@dimen/_22sdp"
                    android:layout_height="@dimen/_22sdp"
                    android:layout_centerInParent="true"
                    app:srcCompat="@drawable/cgt" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="5"
                android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/ll_summary_values"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/iv_lead_sync_status"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_alignParentRight="true"
                                android:layout_width="@dimen/_1sdp"
                                android:layout_height="match_parent"
                                android:background="@color/graylight" />
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                >
                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="@dimen/_3sdp"
                                    android:fontFamily="sans-serif-medium"
                                    android:text="Center Name"
                                    android:layout_gravity="center"
                                    android:layout_weight="1"
                                    android:textColor="@color/contact_name"
                                    android:textSize="@dimen/_8ssp" />

                                <TextView
                                    android:id="@+id/tv_center_name_value"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:text="Name of the center"
                                    android:layout_weight="1.5"
                                    android:fontFamily="sans-serif-medium"
                                    android:textColor="@color/contact_name"
                                    android:textSize="@dimen/_8ssp" />

                            </LinearLayout>
                        </LinearLayout>

                        <TextView
                            android:layout_alignParentRight="true"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_1sdp"
                            android:background="@color/graylight"
                            />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_alignParentRight="true"
                                android:id="@+id/textView_separator"
                                android:layout_width="@dimen/_1sdp"
                                android:layout_height="match_parent"
                                android:background="@color/graylight" />
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                >
                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="@dimen/_3sdp"
                                    android:fontFamily="sans-serif-medium"
                                    android:text="Village Name"
                                    android:layout_gravity="center"
                                    android:layout_weight="1"
                                    android:textColor="@color/contact_name"
                                    android:textSize="@dimen/_8ssp" />

                                <TextView
                                    android:id="@+id/tv_village_name_value"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:text="Name of the village"
                                    android:layout_weight="1.5"
                                    android:fontFamily="sans-serif-medium"
                                    android:textColor="@color/contact_name"
                                    android:textSize="@dimen/_8ssp" />
                            </LinearLayout>


                        </LinearLayout>
                        <TextView
                            android:layout_alignParentRight="true"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_1sdp"
                            android:background="@color/graylight"
                            />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:visibility="gone">
                            <TextView
                                android:layout_alignParentRight="true"
                                android:layout_width="@dimen/_1sdp"
                                android:layout_height="match_parent"
                                android:background="@color/graylight" />
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                >
                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="@dimen/_3sdp"
                                    android:fontFamily="sans-serif-medium"
                                    android:text="Loan Amount:"
                                    android:layout_gravity="center"
                                    android:layout_weight="1"
                                    android:textColor="@color/contact_name"
                                    android:textSize="@dimen/_8ssp" />

                                <TextView
                                    android:id="@+id/tv_lead_amount_value"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:text="50000"
                                    android:layout_weight="1.5"
                                    android:fontFamily="sans-serif-medium"
                                    android:textColor="@color/contact_name"
                                    android:textSize="@dimen/_8ssp" />

                            </LinearLayout>

                        </LinearLayout>


                        <TextView
                            android:layout_alignParentRight="true"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_1sdp"
                            android:background="@color/graylight"
                            />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_alignParentRight="true"
                                android:layout_width="@dimen/_1sdp"
                                android:layout_height="match_parent"
                                android:background="@color/graylight" />
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                >
                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="@dimen/_3sdp"
                                    android:fontFamily="sans-serif-medium"
                                    android:text="Center Id"
                                    android:layout_gravity="center"
                                    android:layout_weight="1"
                                    android:textColor="@color/contact_name"
                                    android:textSize="@dimen/_8ssp" />

                                <TextView
                                    android:id="@+id/tv_center_id_value"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:text="11111111111111111"
                                    android:layout_weight="1.5"
                                    android:fontFamily="sans-serif-medium"
                                    android:textColor="@color/contact_name"
                                    android:textSize="@dimen/_8ssp" />

                            </LinearLayout>

                        </LinearLayout>  <TextView
                            android:layout_alignParentRight="true"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_1sdp"
                            android:background="@color/graylight"
                            />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_alignParentRight="true"
                                android:layout_width="@dimen/_1sdp"
                                android:layout_height="match_parent"
                                android:background="@color/graylight" />
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                >
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="@dimen/_3sdp"
                                    android:fontFamily="sans-serif-medium"
                                    android:text="CGT 1"
                                    android:layout_gravity="center"
                                    android:layout_weight="1.5"
                                    android:textColor="@color/contact_name"
                                    android:textSize="@dimen/_8ssp" />

                                <TextView
                                    android:id="@+id/tv_cgt_cycle1_value"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:gravity="start"
                                    android:text="2 (members)"
                                    android:layout_weight="1"
                                    android:fontFamily="sans-serif-medium"
                                    android:textColor="@color/contact_name"
                                    android:textSize="@dimen/_8ssp" />


                            </LinearLayout>

                        </LinearLayout>
                        <TextView
                            android:layout_alignParentRight="true"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_1sdp"
                            android:background="@color/graylight"
                            />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_alignParentRight="true"
                                android:layout_width="@dimen/_1sdp"
                                android:layout_height="match_parent"
                                android:background="@color/graylight" />
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                >
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="@dimen/_3sdp"
                                    android:fontFamily="sans-serif-medium"
                                    android:text="CGT 2"
                                    android:layout_gravity="center"
                                    android:layout_weight="1.5"
                                    android:textColor="@color/contact_name"
                                    android:textSize="@dimen/_8ssp" />

                                <TextView
                                    android:id="@+id/tv_cgt_cycle2_value"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:gravity="start"
                                    android:text="2 (members)"
                                    android:layout_weight="1"
                                    android:fontFamily="sans-serif-medium"
                                    android:textColor="@color/contact_name"
                                    android:textSize="@dimen/_8ssp" />


                            </LinearLayout>

                        </LinearLayout>

                        <TextView
                            android:layout_alignParentRight="true"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_1sdp"
                            android:background="@color/graylight"
                            />
                    </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_approve_or_reject"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_3sdp"
                    android:layout_gravity="center"
                    android:paddingRight="@dimen/_35sdp"

                    android:orientation="horizontal">

                  <!--  <Button
                        android:id="@+id/btn_approve"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="APPROVE"
                        android:layout_margin="@dimen/_2sdp"
                        style="@style/CustomBtnStylePd"
                        android:background="@drawable/bg_userid_ui"
                        android:backgroundTint="@color/colorGreen1"/>-->

                    <Button
                        android:id="@+id/btn_submit"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_2sdp"
                        android:layout_weight="1"
                        style="@style/CustomBtnStylePd"
                        android:background="@drawable/bg_userid_ui"
                        android:backgroundTint="@color/colorBlue"
                        android:visibility="gone"
                        android:text="SUBMIT" />

                    <Button
                        android:id="@+id/btn_final_status"
                        style="@style/CustomBtnStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_2sdp"
                        android:layout_weight="1"
                        android:background="@drawable/bg_userid_ui"
                        android:backgroundTint="@color/colorBlue"
                        android:enabled="false"
                        android:text="SUBMITTED"
                        android:visibility="gone" />

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>