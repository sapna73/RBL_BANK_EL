<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:clickable="true"
    android:paddingLeft="@dimen/_12sdp"
    android:paddingTop="@dimen/_6sdp"
    android:paddingRight="@dimen/_12sdp"
    android:paddingBottom="@dimen/_6sdp">

    <androidx.cardview.widget.CardView
        android:layout_margin="@dimen/_5sdp"
        android:id="@+id/cv_planner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        app:cardElevation="@dimen/_4sdp"
        app:cardBackgroundColor="@color/colorRed_light_background"
        app:cardCornerRadius="@dimen/_5sdp">

        <LinearLayout
           android:layout_marginTop="@dimen/_1sdp"
            android:layout_marginBottom="@dimen/_1sdp"
            android:layout_marginRight="@dimen/_2sdp"
            android:layout_marginLeft="@dimen/_2sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                >


                <ImageView
                    android:id="@+id/iv_planner_sync_status"
                    android:layout_width="@dimen/_22sdp"
                    android:layout_height="@dimen/_22sdp"
                    android:layout_centerInParent="true"
                    app:srcCompat="@mipmap/sync_pd" />

            </RelativeLayout>

            <TextView
                android:background="@color/graylight"
                android:layout_width="@dimen/_1sdp"
                android:layout_height="match_parent"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="5"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/ll_planner_summary_values"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/iv_lead_sync_status"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_margin="@dimen/_2sdp"
                            >
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/_3sdp"
                                android:fontFamily="sans-serif-medium"
                                android:text="Shop Name:"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:textColor="@color/contact_name"
                                android:textSize="@dimen/_8ssp" />

                            <TextView
                                android:id="@+id/tv_shop_name_value"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="Electronics"
                                android:layout_weight="1.5"
                                android:fontFamily="sans-serif-medium"
                                android:textColor="@color/contact_name"
                                android:textSize="@dimen/_8ssp" />

                        </LinearLayout>
                    </LinearLayout>

                    <TextView
                        android:layout_alignParentRight="true"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1sdp"
                        android:background="@color/graylight"
                        />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_margin="@dimen/_2sdp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            >
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/_3sdp"
                                android:fontFamily="sans-serif-medium"
                                android:text="Purpose of Visit"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:textColor="@color/contact_name"
                                android:textSize="@dimen/_8ssp" />

                            <TextView
                                android:id="@+id/tv_purpose_of_visit_value"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="lead Generation"
                                android:layout_weight="1.5"
                                android:fontFamily="sans-serif-medium"
                                android:textColor="@color/contact_name"
                                android:textSize="@dimen/_8ssp" />
                        </LinearLayout>


                    </LinearLayout>
                    <TextView
                        android:layout_alignParentRight="true"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1sdp"
                        android:background="@color/graylight"
                        />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:visibility="gone">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            >
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/_3sdp"
                                android:fontFamily="sans-serif-medium"
                                android:text="Loan Amount:"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:textColor="@color/contact_name"
                                android:textSize="@dimen/_8ssp" />

                            <TextView
                                android:id="@+id/tv_lead_amount_value"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="50000"
                                android:layout_weight="1.5"
                                android:fontFamily="sans-serif-medium"
                                android:textColor="@color/contact_name"
                                android:textSize="@dimen/_8ssp" />

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_margin="@dimen/_2sdp"
                            >
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/_3sdp"
                                android:fontFamily="sans-serif-medium"
                                android:text="Status"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:textColor="@color/contact_name"
                                android:textSize="@dimen/_8ssp" />

                            <TextView
                                android:id="@+id/tv_status_value"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="Start Visit"
                                android:layout_weight="1.5"
                                android:fontFamily="sans-serif-medium"
                                android:textColor="@color/contact_name"
                                android:textSize="@dimen/_8ssp" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>