<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_lead"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        app:cardBackgroundColor="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@drawable/bg_border_gray_light"
                android:layout_gravity="center"
                android:padding="0.5dp"
                android:layout_weight="0.8">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@color/gray_background"
                android:layout_gravity="center">

                 <TextView
                     android:id="@+id/tv_client_name"
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:textSize="@dimen/_8ssp"
                     android:gravity="center"
                     android:layout_marginTop="@dimen/_5sdp"
                     android:textColor="@color/black"
                     android:text="Client Name"/>

                <TextView

                    android:id="@+id/tv_client_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_7ssp"
                    android:gravity="center"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:textStyle="bold"
                    android:textColor="#32ba49"
                    android:text="Client Id"/>


            </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/bg_border_gray_light"
                android:orientation="vertical">

               <TextView
                   android:id="@+id/tv_emi_due"
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:gravity="center"
                   android:textSize="@dimen/_7ssp"
                   android:textStyle="bold"
                   android:textColor="@color/black"
                   android:text="emi due"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/bg_border_gray_light"
                android:orientation="vertical">

               <TextView
                   android:id="@+id/tv_total_due"
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:gravity="center"
                   android:textSize="@dimen/_7ssp"
                   android:textStyle="bold"
                   android:textColor="@color/black"
                   android:text="total due"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/bg_border_gray_light"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_collected_amt"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textSize="@dimen/_7ssp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:text="collected amt"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/bg_border_gray_light"
                android:orientation="vertical">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <CheckBox
                        android:id="@+id/cb_collection_confirm"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"/>

                    <TextView
                        android:id="@+id/tv_emi_details"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/cb_collection_confirm"
                        android:textSize="@dimen/_7ssp"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:textColor="@color/colorRed"
                        android:layout_marginBottom="@dimen/_5sdp"
                        android:text="Details"/>

                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>


    </androidx.cardview.widget.CardView>

</RelativeLayout>