<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_lead"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        app:cardBackgroundColor="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@drawable/bg_border_gray_light"
                android:layout_gravity="center"
                android:padding="0.5dp"
                android:layout_weight="0.8">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@color/gray_background"
                android:layout_gravity="center">

                 <TextView
                     android:id="@+id/tv_loan_prod_code_value"
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:textSize="@dimen/_8ssp"
                     android:gravity="center"
                     android:layout_marginTop="@dimen/_5sdp"
                     android:textColor="@color/black"
                     android:text="Product Code"/>

                <TextView

                    android:id="@+id/tv_loan_id_value"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_7ssp"
                    android:gravity="center"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:textStyle="bold"
                    android:textColor="@color/light_green"
                    android:text="Loan Id"/>


            </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.8"
                android:background="@drawable/bg_border_gray_light"
                android:orientation="vertical">

               <TextView
                   android:id="@+id/tv_customer_name"
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:gravity="center"
                   android:textSize="@dimen/_7ssp"
                   android:textStyle="bold"
                   android:textColor="@color/black"
                   android:text="Customer Name"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.8"
                android:background="@drawable/bg_border_gray_light"
                android:orientation="vertical">

               <TextView
                   android:id="@+id/tv_center_name"
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:gravity="center"
                   android:textSize="@dimen/_7ssp"
                   android:textStyle="bold"
                   android:textColor="@color/black"
                   android:text="Center Name"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.8"
                android:background="@drawable/bg_border_gray_light"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tv_collected_amt"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textSize="@dimen/_7ssp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:text="collected Amt"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.8"
                android:layout_gravity="center"
                android:gravity="center"
                android:background="@drawable/bg_border_gray_light"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tv_payment_status"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textSize="@dimen/_7ssp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:text="Payment Status"/>

            </LinearLayout>

        </LinearLayout>


    </androidx.cardview.widget.CardView>

</RelativeLayout>