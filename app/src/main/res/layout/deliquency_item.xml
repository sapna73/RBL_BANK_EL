<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin= "@dimen/_10sdp"
        android:id="@+id/card_deliquency_data"
        android:elevation="5dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="UCIC"
                    android:textColor="@color/white"
                    android:background="@color/primaryColor"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:padding="@dimen/_3sdp"
                    android:textSize="@dimen/_10ssp"/>
                <TextView
                    android:id="@+id/tv_ucic_no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:padding="@dimen/_3sdp"
                    android:textSize="@dimen/_10ssp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="NAME"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:background="@color/primaryColor"
                    android:textStyle="bold"
                    android:padding="@dimen/_3sdp"
                    android:textSize="@dimen/_10ssp"/>
                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:padding="@dimen/_3sdp"
                    android:textSize="@dimen/_10ssp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:textColor="@color/white"
                    android:background="@color/primaryColor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="LoanAccount No"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:textStyle="bold"
                    android:padding="@dimen/_3sdp"
                    android:textSize="@dimen/_10ssp"/>
                <TextView
                    android:id="@+id/tv_loan_account_no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:padding="@dimen/_3sdp"
                    android:textSize="@dimen/_10ssp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:textColor="@color/white"
                    android:background="@color/primaryColor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Source System"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:textStyle="bold"
                    android:padding="@dimen/_3sdp"
                    android:textSize="@dimen/_10ssp"/>
                <TextView
                    android:id="@+id/tv_source_system"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:padding="@dimen/_3sdp"
                    android:textSize="@dimen/_10ssp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:textColor="@color/white"
                    android:background="@color/primaryColor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="CURRENT DPD"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:textStyle="bold"
                    android:padding="@dimen/_3sdp"
                    android:textSize="@dimen/_10ssp"/>
                <TextView
                    android:id="@+id/tv_current_dpd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:padding="@dimen/_3sdp"
                    android:textSize="@dimen/_10ssp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:textColor="@color/white"
                    android:background="@color/primaryColor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Write OFF"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:textStyle="bold"
                    android:padding="@dimen/_3sdp"
                    android:textSize="@dimen/_10ssp"/>
                <TextView
                    android:id="@+id/tv_twrite_off"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:padding="@dimen/_3sdp"
                    android:textSize="@dimen/_10ssp"/>

            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>