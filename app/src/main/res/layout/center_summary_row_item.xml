<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/graylight"
    android:clickable="true"
    >

    <RelativeLayout

        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:elevation="@dimen/_5sdp">

        <LinearLayout
            android:id="@+id/cv_village_survey"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_ui_white_box"
            android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"

            android:clickable="true"
            android:paddingBottom="@dimen/_10sdp"
            android:paddingLeft="@dimen/_16sdp"
            android:paddingRight="@dimen/_16sdp"
            android:paddingTop="@dimen/_10sdp">


            <ImageView
                android:id="@+id/iv_sync_status"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:layout_centerVertical="true"
                app:srcCompat="@drawable/branch"
                android:layout_marginRight="@dimen/_5sdp" />

            <LinearLayout
                android:id="@+id/ll_village_summary_values"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/iv_sync_status"
                android:orientation="vertical">

            <TextView
                android:id="@+id/tv_village_name_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_2sdp"
                android:fontFamily="sans-serif-medium"
                android:text="KARIM NAGAR"
                android:textColor="@color/contact_name"
                android:textSize="@dimen/_8ssp" />

            <TextView
                android:id="@+id/tv_village_id_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="822859429572705"
                android:textStyle="bold"
                android:layout_marginLeft="@dimen/_2sdp"
                android:textColor="@color/contact_name"
                android:textSize="@dimen/_6ssp" />

            </LinearLayout>

        </RelativeLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:weightSum="2"
                android:gravity="center"
                android:orientation="vertical">

                <!--<Button
                    android:id="@+id/btn_approve"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_margin="@dimen/_2sdp"
                    android:layout_weight="1"
                    style="@style/CustomBtnStylePd"
                    android:background="@drawable/bg_userid_ui"
                    android:backgroundTint="@color/colorBlue"
                    android:text="ADD MEMBER" />-->

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/_2sdp"
                    android:text="No Of Members"
                    android:textColor="@color/contact_name"
                    android:textSize="@dimen/_8sdp"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/tv_no_of_customers"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="0"
                    android:textColor="@color/color_text_gray"
                    android:textSize="@dimen/_8sdp" />

            </LinearLayout>


        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>