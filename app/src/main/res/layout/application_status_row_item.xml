<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:clickable="true"
    android:paddingLeft="@dimen/_12sdp"
    android:paddingTop="@dimen/_12sdp"
    android:paddingRight="@dimen/_12sdp"
    android:paddingBottom="@dimen/_12sdp">

    <androidx.cardview.widget.CardView
        android:layout_margin="@dimen/_5sdp"
        android:id="@+id/cv_lead"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        app:cardElevation="@dimen/_4sdp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="@dimen/_5sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.2"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:orientation="vertical"
                >


                <ImageView
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_gravity="center"
                    android:id="@+id/iv_lead_sync_status"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_marginBottom="@dimen/_3sdp"
                    app:srcCompat="@drawable/view_user" />

                <Button
                    android:visibility="gone"
                    android:layout_below="@+id/iv_lead_sync_status"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_15sdp"
                    android:background="#fb6c5f"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_8sdp"
                    android:layout_marginLeft="@dimen/_3sdp"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:paddingTop="@dimen/_2sdp"
                    android:paddingBottom="@dimen/_2sdp"
                    android:text="VIEW"/>

            </LinearLayout>

            <TextView
                android:background="@color/gray_background"
                android:layout_width="@dimen/_1sdp"
                android:layout_marginRight="@dimen/_3sdp"
                android:layout_marginLeft="@dimen/_3sdp"
                android:layout_height="match_parent"/>

            <LinearLayout
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="5"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/ll_lead_summary_values"
                    android:layout_width="0dp"
                    android:layout_weight="4"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/iv_lead_sync_status"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/_3sdp"
                            android:fontFamily="sans-serif-medium"
                            android:text="Client Id:"
                            android:layout_gravity="center"
                            android:layout_weight="0.5"
                            android:textStyle="bold"
                            android:textColor="@color/contact_name"
                            android:textSize="@dimen/_8ssp" />

                        <TextView
                            android:id="@+id/tv_lead_clientid_value"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="11122233344499999"
                            android:layout_weight="1.3"
                            android:fontFamily="sans-serif-medium"
                            android:textColor="@color/contact_name"
                            android:textSize="@dimen/_8ssp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_alignParentRight="true"
                            android:layout_width="@dimen/_1sdp"
                            android:layout_height="match_parent"
                            android:background="@color/graylight" />

                        <LinearLayout
                            android:layout_marginTop="@dimen/_5sdp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:textStyle="bold"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/_3sdp"
                                android:fontFamily="sans-serif-medium"
                                android:text="Name:"
                                android:layout_gravity="center"
                                android:layout_weight="0.5"
                                android:textColor="@color/contact_name"
                                android:textSize="@dimen/_8ssp" />

                            <TextView
                                android:id="@+id/tv_lead_name_value"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="ALI HUSSAIN"
                                android:layout_weight="1.3"
                                android:fontFamily="sans-serif-medium"
                                android:textColor="@color/contact_name"
                                android:textSize="@dimen/_8ssp" />

                        </LinearLayout>
                    </LinearLayout>

                    <TextView
                        android:layout_alignParentRight="true"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1sdp"
                        android:background="@color/graylight"
                        />

                    <TextView
                        android:layout_alignParentRight="true"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1sdp"
                        android:background="@color/graylight" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:visibility="gone">
                        <TextView
                            android:layout_alignParentRight="true"
                            android:layout_width="@dimen/_1sdp"
                            android:layout_height="match_parent"
                            android:background="@color/graylight" />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/_3sdp"
                                android:fontFamily="sans-serif-medium"
                                android:text="Loan Amount:"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:textColor="@color/contact_name"
                                android:textSize="@dimen/_8ssp" />

                            <TextView
                                android:id="@+id/tv_lead_amount_value"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="50000"
                                android:layout_weight="1.5"
                                android:fontFamily="sans-serif-medium"
                                android:textColor="@color/contact_name"
                                android:textSize="@dimen/_8ssp" />

                        </LinearLayout>

                    </LinearLayout>


                    <TextView
                        android:layout_alignParentRight="true"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1sdp"
                        android:background="@color/graylight" />

                </LinearLayout>
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:layout_marginRight="@dimen/_5sdp">

                    <Button
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginBottom="@dimen/_5sdp"
                        android:layout_marginLeft="@dimen/_3sdp"
                        android:id="@+id/btn_currentStage"
                        style="@style/CustomBtnStyleMinPadding"
                        android:layout_width="@dimen/_100sdp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:background="@drawable/bg_userid_ui"
                        android:backgroundTint="#6FD2DF"
                        android:enabled="false"
                        android:gravity="center"
                        android:text="Current Stage"
                        android:visibility="visible" />
                </RelativeLayout>
            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>