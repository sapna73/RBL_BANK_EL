<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_btn_common"
    android:layout_width="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="@dimen/_20sdp"
    android:layout_centerInParent="true"
    android:layout_height="wrap_content">

    <ImageButton
        android:id="@+id/btn_common"
        android:layout_width="@dimen/_15ssp"
        android:layout_height="@dimen/_15sdp"
        android:background="@color/colorGrass"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="@dimen/_10sdp"
        app:srcCompat="@drawable/ic_library_add_black_24dp"/>

    <TextView
        android:id="@+id/tv_add_button_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_common"
        android:layout_marginTop="@dimen/_3sdp"
        android:text="Add Another"
        android:textStyle="bold"
        android:textColor="@color/dark_gray"
        android:gravity="end"/>

</RelativeLayout>