<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_client_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorMintDark"
                android:text="CLIENT DETAILS"
                android:textAlignment="center"
                android:padding="@dimen/_8sdp"
                android:textSize="@dimen/_10ssp"
                android:textStyle="bold"
                android:gravity="center"
                android:textColor="@color/white"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_3sdp"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginLeft="@dimen/_2sdp"
                    android:layout_marginRight="@dimen/_2sdp"
                    android:layout_marginBottom="@dimen/_10sdp">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_5sdp"
                        app:cardCornerRadius="@dimen/_5sdp"
                        android:elevation="@dimen/_5sdp">

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/colorBitterSweetDark">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">
                                <LinearLayout
                                    android:id="@+id/ll_applicant"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:orientation="vertical"
                                    android:layout_margin="@dimen/_5sdp"
                                    android:background="@color/colorBitterSweet">

                                    <ImageView
                                        android:layout_width="@dimen/_35sdp"
                                        android:layout_height="@dimen/_35sdp"
                                        android:tint="@color/white"
                                        android:layout_marginTop="@dimen/_10sdp"
                                        android:layout_gravity="center"
                                        app:srcCompat="@drawable/ic_assignment_ind_black_24dp"/>

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:padding="@dimen/_5sdp"
                                        android:layout_marginTop="@dimen/_10sdp"
                                        android:gravity="center"
                                        android:textStyle="bold"
                                        android:textSize="@dimen/_8ssp"
                                        android:background="@color/colorBitterSweetDark"
                                        android:textColor="@color/white"
                                        android:text="APPLICANT"/>

                                </LinearLayout>
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_weight="0.35"
                                    android:orientation="vertical"
                                    android:layout_margin="@dimen/_5sdp"
                                    android:background="@color/white">

                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content">

                                        <androidx.recyclerview.widget.RecyclerView
                                            android:id="@+id/rv_add_applicant"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:clipToPadding="false"
                                            android:layout_toLeftOf="@+id/ib_add_applicant"
                                            android:padding="@dimen/_5sdp">
                                        </androidx.recyclerview.widget.RecyclerView>

                                        <ImageView
                                            android:id="@+id/iv_add_applicant"
                                            android:layout_width="@dimen/_35sdp"
                                            android:layout_height="@dimen/_35sdp"
                                            android:layout_marginTop="@dimen/_8sdp"
                                            android:layout_centerHorizontal="true"
                                            app:srcCompat="@drawable/emptybox"/>

                                        <TextView
                                            android:id="@+id/tv_add_applicant"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_below="@+id/iv_add_applicant"
                                            android:padding="@dimen/_5sdp"
                                            android:layout_marginTop="@dimen/_5sdp"
                                            android:gravity="center"
                                            android:textStyle="bold"
                                            android:text="ADD APPLICANT DETAILS"/>

                                        <androidx.appcompat.widget.AppCompatImageButton
                                            android:id="@+id/ib_add_applicant"
                                            android:layout_width="@dimen/_20sdp"
                                            android:layout_height="@dimen/_20sdp"
                                            android:layout_alignParentEnd="true"
                                            android:layout_alignParentBottom="true"
                                            android:tint="@color/white"
                                            android:background="@color/colorBitterSweet"
                                            app:srcCompat="@drawable/ic_add"/>

                                    </RelativeLayout>

                                </LinearLayout>

                            </LinearLayout>
                        </FrameLayout>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_5sdp"
                        app:cardCornerRadius="@dimen/_5sdp"
                        android:elevation="@dimen/_5sdp">

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/colorGrapeFruitDark">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">
                                <LinearLayout
                                    android:id="@+id/ll_co_applicant"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:orientation="vertical"
                                    android:layout_margin="@dimen/_5sdp"
                                    android:background="@color/colorGrapeFruit">

                                    <ImageView
                                        android:layout_width="@dimen/_35sdp"
                                        android:layout_height="@dimen/_35sdp"
                                        android:tint="@color/white"
                                        android:layout_marginTop="@dimen/_10sdp"
                                        android:layout_gravity="center"
                                        app:srcCompat="@drawable/ic_group_add_black_24dp"/>

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:padding="@dimen/_5sdp"
                                        android:layout_marginTop="@dimen/_10sdp"
                                        android:gravity="center"
                                        android:textStyle="bold"
                                        android:textSize="@dimen/_8ssp"
                                        android:background="@color/colorGrapeFruitDark"
                                        android:textColor="@color/white"
                                        android:text="CO APPLICANT"/>

                                </LinearLayout>
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_weight="0.35"
                                    android:orientation="vertical"
                                    android:layout_margin="@dimen/_5sdp"
                                    android:background="@color/white">

                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content">

                                        <androidx.recyclerview.widget.RecyclerView
                                            android:id="@+id/rv_add_co_applicant"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:clipToPadding="false"
                                            android:layout_toLeftOf="@+id/ib_add_co_applicant"
                                            android:padding="@dimen/_5sdp">
                                        </androidx.recyclerview.widget.RecyclerView>

                                        <ImageView
                                            android:id="@+id/iv_add_co_applicant"
                                            android:layout_width="@dimen/_35sdp"
                                            android:layout_height="@dimen/_35sdp"
                                            android:layout_marginTop="@dimen/_8sdp"
                                            android:layout_centerHorizontal="true"
                                            app:srcCompat="@drawable/emptybox"/>

                                        <TextView
                                            android:id="@+id/tv_add_co_applicant"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_below="@+id/iv_add_co_applicant"
                                            android:padding="@dimen/_5sdp"
                                            android:layout_marginTop="@dimen/_5sdp"
                                            android:gravity="center"
                                            android:textStyle="bold"
                                            android:text="ADD CO APPLICANT DETAILS"/>

                                        <androidx.appcompat.widget.AppCompatImageButton
                                            android:id="@+id/ib_add_co_applicant"
                                            android:layout_width="@dimen/_20sdp"
                                            android:layout_height="@dimen/_20sdp"
                                            android:layout_alignParentEnd="true"
                                            android:layout_alignParentBottom="true"
                                            android:tint="@color/white"
                                            android:background="@color/colorGrapeFruit"
                                            app:srcCompat="@drawable/ic_add"/>

                                    </RelativeLayout>

                                </LinearLayout>

                            </LinearLayout>
                        </FrameLayout>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_5sdp"
                        app:cardCornerRadius="@dimen/_5sdp"
                        android:elevation="@dimen/_5sdp">

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/colorFlowerDark">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">
                                <LinearLayout
                                    android:id="@+id/ll_business"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:orientation="vertical"
                                    android:layout_margin="@dimen/_5sdp"
                                    android:background="@color/colorFlower">

                                    <ImageView
                                        android:layout_width="@dimen/_35sdp"
                                        android:layout_height="@dimen/_35sdp"
                                        android:tint="@color/white"
                                        android:layout_marginTop="@dimen/_10sdp"
                                        android:layout_gravity="center"
                                        app:srcCompat="@drawable/ic_business_center_black_24dp"/>

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:padding="@dimen/_5sdp"
                                        android:layout_marginTop="@dimen/_10sdp"
                                        android:gravity="center"
                                        android:textStyle="bold"
                                        android:textSize="@dimen/_8ssp"
                                        android:background="@color/colorFlowerDark"
                                        android:textColor="@color/white"
                                        android:text="BUSINESS"/>

                                </LinearLayout>
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_weight="0.35"
                                    android:orientation="vertical"
                                    android:layout_margin="@dimen/_5sdp"
                                    android:background="@color/white">

                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content">

                                        <androidx.recyclerview.widget.RecyclerView
                                            android:id="@+id/rv_add_business"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:clipToPadding="false"
                                            android:layout_toLeftOf="@+id/ib_add_business"
                                            android:padding="@dimen/_5sdp">
                                        </androidx.recyclerview.widget.RecyclerView>

                                        <ImageView
                                            android:id="@+id/iv_add_business"
                                            android:layout_width="@dimen/_35sdp"
                                            android:layout_height="@dimen/_35sdp"
                                            android:layout_marginTop="@dimen/_8sdp"
                                            android:layout_centerHorizontal="true"
                                            app:srcCompat="@drawable/emptybox"/>

                                        <TextView
                                            android:id="@+id/tv_add_business"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_below="@+id/iv_add_business"
                                            android:padding="@dimen/_5sdp"
                                            android:layout_marginTop="@dimen/_5sdp"
                                            android:gravity="center"
                                            android:textStyle="bold"
                                            android:text="ADD BUSINESS DETAILS"/>

                                        <androidx.appcompat.widget.AppCompatImageButton
                                            android:id="@+id/ib_add_business"
                                            android:layout_width="@dimen/_20sdp"
                                            android:layout_height="@dimen/_20sdp"
                                            android:layout_alignParentEnd="true"
                                            android:layout_alignParentBottom="true"
                                            android:tint="@color/white"
                                            android:background="@color/colorFlower"
                                            app:srcCompat="@drawable/ic_add"/>

                                    </RelativeLayout>

                                </LinearLayout>

                            </LinearLayout>
                        </FrameLayout>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_5sdp"
                        app:cardCornerRadius="@dimen/_5sdp"
                        android:elevation="@dimen/_5sdp">

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/colorGrassDark">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">
                                <LinearLayout
                                    android:id="@+id/ll_reference"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:orientation="vertical"
                                    android:layout_margin="@dimen/_5sdp"
                                    android:background="@color/colorGrass">

                                    <ImageView
                                        android:layout_width="@dimen/_35sdp"
                                        android:layout_height="@dimen/_35sdp"
                                        android:tint="@color/white"
                                        android:layout_marginTop="@dimen/_10sdp"
                                        android:layout_gravity="center"
                                        app:srcCompat="@drawable/ic_wc_black_24dp"/>

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:padding="@dimen/_5sdp"
                                        android:layout_marginTop="@dimen/_10sdp"
                                        android:gravity="center"
                                        android:textStyle="bold"
                                        android:textSize="@dimen/_8ssp"
                                        android:background="@color/colorGrassDark"
                                        android:textColor="@color/white"
                                        android:text="REFERENCE"/>

                                </LinearLayout>
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_weight="0.35"
                                    android:orientation="vertical"
                                    android:layout_margin="@dimen/_5sdp"
                                    android:background="@color/white">

                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content">

                                        <androidx.recyclerview.widget.RecyclerView
                                            android:id="@+id/rv_add_reference"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:clipToPadding="false"
                                            android:layout_toLeftOf="@+id/ib_add_reference"
                                            android:padding="@dimen/_5sdp">
                                        </androidx.recyclerview.widget.RecyclerView>

                                        <ImageView
                                            android:id="@+id/iv_add_reference"
                                            android:layout_width="@dimen/_35sdp"
                                            android:layout_height="@dimen/_35sdp"
                                            android:layout_marginTop="@dimen/_8sdp"
                                            android:layout_centerHorizontal="true"
                                            app:srcCompat="@drawable/emptybox"/>

                                        <TextView
                                            android:id="@+id/tv_add_reference"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_below="@+id/iv_add_reference"
                                            android:padding="@dimen/_5sdp"
                                            android:layout_marginTop="@dimen/_5sdp"
                                            android:gravity="center"
                                            android:textStyle="bold"
                                            android:text="ADD REFERENCE DETAILS"/>

                                        <androidx.appcompat.widget.AppCompatImageButton
                                            android:id="@+id/ib_add_reference"
                                            android:layout_width="@dimen/_20sdp"
                                            android:layout_height="@dimen/_20sdp"
                                            android:layout_alignParentEnd="true"
                                            android:layout_alignParentBottom="true"
                                            android:tint="@color/white"
                                            android:background="@color/colorGrass"
                                            app:srcCompat="@drawable/ic_add"/>

                                    </RelativeLayout>

                                </LinearLayout>

                            </LinearLayout>
                        </FrameLayout>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_5sdp"
                        app:cardCornerRadius="@dimen/_5sdp"
                        android:elevation="@dimen/_5sdp">

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/colorLavanderDark">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">
                                <LinearLayout
                                    android:id="@+id/ll_document_upload"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:orientation="vertical"
                                    android:layout_margin="@dimen/_5sdp"
                                    android:background="@color/colorLavander">

                                    <ImageView
                                        android:layout_width="@dimen/_35sdp"
                                        android:layout_height="@dimen/_35sdp"
                                        android:tint="@color/white"
                                        android:layout_marginTop="@dimen/_10sdp"
                                        android:layout_gravity="center"
                                        app:srcCompat="@drawable/ic_collections_black_24dp"/>

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:padding="@dimen/_5sdp"
                                        android:layout_marginTop="@dimen/_10sdp"
                                        android:gravity="center"
                                        android:textStyle="bold"
                                        android:textSize="@dimen/_8ssp"
                                        android:background="@color/colorLavanderDark"
                                        android:textColor="@color/white"
                                        android:text="DOCUMENTS"/>

                                </LinearLayout>
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_weight="0.35"
                                    android:orientation="vertical"
                                    android:layout_margin="@dimen/_5sdp"
                                    android:background="@color/white">

                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content">

                                        <androidx.recyclerview.widget.RecyclerView
                                            android:id="@+id/rv_add_document"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:clipToPadding="false"
                                            android:layout_toLeftOf="@+id/ib_add_document"
                                            android:padding="@dimen/_5sdp">
                                        </androidx.recyclerview.widget.RecyclerView>

                                        <ImageView
                                            android:id="@+id/iv_add_document"
                                            android:layout_width="@dimen/_35sdp"
                                            android:layout_height="@dimen/_35sdp"
                                            android:layout_marginTop="@dimen/_8sdp"
                                            android:layout_centerHorizontal="true"
                                            app:srcCompat="@drawable/emptybox"/>

                                        <TextView
                                            android:id="@+id/tv_add_document"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_below="@+id/iv_add_document"
                                            android:padding="@dimen/_5sdp"
                                            android:layout_marginTop="@dimen/_5sdp"
                                            android:gravity="center"
                                            android:textStyle="bold"
                                            android:text="ADD DOCUMENTS"/>

                                        <androidx.appcompat.widget.AppCompatImageButton
                                            android:id="@+id/ib_add_document"
                                            android:layout_width="@dimen/_20sdp"
                                            android:layout_height="@dimen/_20sdp"
                                            android:layout_alignParentEnd="true"
                                            android:layout_alignParentBottom="true"
                                            android:tint="@color/white"
                                            android:background="@color/colorLavander"
                                            app:srcCompat="@drawable/ic_add"/>

                                    </RelativeLayout>

                                </LinearLayout>

                            </LinearLayout>
                        </FrameLayout>
                    </androidx.cardview.widget.CardView>


                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </ScrollView>

</LinearLayout>