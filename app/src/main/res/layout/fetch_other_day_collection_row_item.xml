<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/graylight"
    android:clickable="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:elevation="@dimen/_5sdp">

        <LinearLayout
            android:id="@+id/cv_village_survey"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_ui_white_box"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:clickable="true"
                android:paddingLeft="@dimen/_16sdp"
                android:paddingTop="@dimen/_10sdp"
                android:paddingRight="@dimen/_16sdp"
                android:paddingBottom="@dimen/_10sdp">


                <ImageView
                    android:id="@+id/iv_sync_status"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/_5sdp"
                    app:srcCompat="@drawable/branch" />

                <LinearLayout
                    android:id="@+id/ll_village_summary_values"
                    android:layout_toLeftOf="@+id/rl_check"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/iv_sync_status"
                    android:orientation="vertical">

                    <TextView
                        android:layout_weight="1"
                        android:id="@+id/tv_village_name_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_2sdp"
                        android:fontFamily="sans-serif-medium"
                        android:text="KARIM NAGAR"
                        android:textColor="@color/contact_name"
                        android:textSize="@dimen/_14ssp" />

                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/rl_check"
                    android:layout_alignParentEnd="true"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/_5sdp">
                    <CheckBox
                        android:id="@+id/cb_member_attendance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"/>

                </RelativeLayout>

            </RelativeLayout>


        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>